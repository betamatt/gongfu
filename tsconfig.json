{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "build",
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "allowJs": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["index.*.js", "build", "dist", "node_modules", "test", "public", "examples"]
}
