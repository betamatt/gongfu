{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "rootDir": "src",
    "outDir": "build",
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2016"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "index.*.js",
    "build",
    "node_modules",
    "test",
    "public",
    "examples"
  ]
}
